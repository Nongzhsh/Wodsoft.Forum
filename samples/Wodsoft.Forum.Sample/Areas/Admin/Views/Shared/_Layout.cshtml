<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - 论坛示例管理控制台</title>

    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.css" />
    <link rel="stylesheet" href="~/css/site.css" />

    <script src="~/lib/jquery/dist/jquery.js"></script>
    <script src="~/lib/popper.js/dist/umd/popper.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
</head>
<body>
    <nav class="navbar navbar-expand-md navbar-dark bg-dark fixed-top">
        <div class="container">
            <button class="navbar-toggler" type="button" data-toggle="collapse" data-target=".navbar-collapse" aria-controls="navbarTogglerDemo01" aria-expanded="false" aria-label="Toggle navigation">
                <span class="navbar-toggler-icon"></span>
            </button>
            <a href="/" class="navbar-brand">论坛管理控制台</a>
            <div class="navbar-collapse collapse">
                @if (User.Identity.IsAuthenticated)
                {
                    <ul class="navbar-nav mr-auto">
                        <li class="nav-item"><a class="nav-link" asp-area="Admin" asp-controller="Home" asp-action="Index">主页</a></li>
                        <li class="nav-item"><a class="nav-link" asp-area="Admin" asp-controller="Board" asp-action="Index">板块管理</a></li>
                        <li class="nav-item"><a class="nav-link" asp-area="Admin" asp-controller="Forum" asp-action="Index">论坛管理</a></li>
                        <li class="nav-item"><a class="nav-link" asp-area="Admin" asp-controller="Member" asp-action="Index">用户管理</a></li>
                    </ul>
                    <ul class="navbar-nav">
                        <li class="nav-item"><span class="navbar-text">你好，@User.Identity.Name</span></li>
                        <li class="nav-item"><a class="nav-link" asp-area="Admin" asp-controller="Account" asp-action="SignOut">注销</a></li>
                    </ul>
                }
            </div>
        </div>
    </nav>
    <div class="container body-content">
        @RenderBody()
        <hr />
        <footer>
            <p>&copy; 2017 - Wodsoft.Forum.Sample</p>
        </footer>
    </div>

    @RenderSection("Scripts", required: false)
</body>
</html>
